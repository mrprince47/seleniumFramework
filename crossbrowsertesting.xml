<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" verbose="0" parallel="tests" thread-count="3">

  <listeners>
    <listener class-name="listeners.ConfigFailureListener"/>
    <listener class-name="listeners.ExtentManager"/>
  </listeners>

  <!-- Chrome -->
  <test name="Chrome Test">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="testClasses.TC002_Login"/>
    </classes>
  </test>

  <!-- Edge -->
  <test name="Edge Test">
    <parameter name="browser" value="edge"/>
    <classes>
      <class name="testClasses.TC002_Login"/>
    </classes>
  </test>

  <!-- Firefox -->
  <test name="Firefox Test">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="testClasses.TC002_Login"/>
    </classes>
  </test>

</suite>
