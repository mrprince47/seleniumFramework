<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <!-- ✅ Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] %-5p %c{1}:%L - %m%n"/>
        </Console>

        <!-- ✅ Rolling File output -->
        <RollingFile name="RollingFile"
                     fileName="logs/selenium.log"
                     filePattern="logs/selenium-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1}:%L - %m%n"/>

            <Policies>
                <!-- Create a new file every day -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Roll over if file > 4MB -->
                <SizeBasedTriggeringPolicy size="4MB"/>
            </Policies>

            <!-- Keep only the last 7 rolled files -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        
        <Logger name="org.testng" level="debug" additivity="false">
    <AppenderRef ref="Console"/>
    <AppenderRef ref="RollingFile"/>
</Logger>

<Logger name="org.openqa.selenium" level="info" additivity="false">
    <AppenderRef ref="Console"/>
    <AppenderRef ref="RollingFile"/>
</Logger>
        <!-- Root logger: writes to both console and rolling file -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
